{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ],
   "compilerOptions": {
      "lib": [
         "es6",
         "es2017"
      ],
      "outDir": "./build",
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
   }
}